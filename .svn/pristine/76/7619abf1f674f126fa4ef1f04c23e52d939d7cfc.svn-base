apiVersion: apps/v1
kind: Deployment
metadata:
  name: waste-test-deployment
  labels:
    app: waste
spec:
  replicas: 1
  selector:
    matchLabels:
      app: waste
  template:
    metadata:
      labels:
        app: waste
    spec:
      containers:
      - name: tcptest
        image: devafatek/tcptest
        ports:
        - containerPort: 80
        livenessProbe:
          httpGet:
            path: /health
            port: 80
            scheme: HTTP
          initialDelaySeconds: 5
          periodSeconds: 15
          timeoutSeconds: 5
        readinessProbe:
          httpGet:
            path: /readiness
            port: 80
            scheme: HTTP
          initialDelaySeconds: 5
          periodSeconds: 15
          timeoutSeconds: 5
