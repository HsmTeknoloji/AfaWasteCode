apiVersion: v1
kind: PersistentVolume
metadata:
  name: waste-configdb-pv-volume
  namespace: waste-system
  labels:
    app: waste-configdb
spec:
  storageClassName: gp2
  capacity:
    storage: 10Gi
  accessModes:
    - ReadWriteOnce
  awsElasticBlockStore:
    fsType: ext4
    volumeID: vol-013704d0e6936caac
  persistentVolumeReclaimPolicy: Retain
  volumeMode: Filesystem
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: waste-configdb-pv-claim
  namespace: waste-system
  labels:
    app: waste-configdb
spec:
  storageClassName: gp2
  volumeMode: Filesystem
  volumeName: waste-configdb-pv-volume
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
