apiVersion: apps/v1
kind: Deployment
metadata:
  name: waste-logapi-deployment
  namespace: waste-system
  labels:
    app: waste-logapi
spec:
  replicas: 1
  selector:
    matchLabels:
      app: waste-logapi
  template:
    metadata:
      labels:
        app: waste-logapi
    spec:
      containers:
      - name: waste-logapi
        image: devafatek/tcptest
        ports:
        - containerPort: 80
        livenessProbe:
          httpGet:
            path: /health
            port: 80
            scheme: HTTP
          initialDelaySeconds: 5
          periodSeconds: 15
          timeoutSeconds: 5
        readinessProbe:
          httpGet:
            path: /readiness
            port: 80
            scheme: HTTP
          initialDelaySeconds: 5
          periodSeconds: 15
          timeoutSeconds: 5
