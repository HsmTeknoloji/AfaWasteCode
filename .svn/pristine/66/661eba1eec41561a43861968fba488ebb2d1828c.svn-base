apiVersion: apps/v1
kind: Deployment
metadata:
  name: waste-listener-deployment
  namespace: waste-system
  labels:
    app: waste-listener
spec:
  replicas: 1
  selector:
    matchLabels:
      app: waste-listener
  template:
    metadata:
      labels:
        app: waste-listener
    spec:
      initContainers:
      - name: wait-for-wasteenhc
        image: curlimages/curl:latest
        command: ["/bin/sh","-c"]
        args: ["while [ $(curl -sw '%{http_code}' http://waste-enhc-cluster-ip/readiness -o /dev/null) -ne 200 ]; do sleep 5; echo 'Waiting for the WasteEnhc...'; done"]
      containers:
      - name: waste-listener
        image: devafatek/wastelistener
        ports:
        - containerPort: 80
        livenessProbe:
          httpGet:
            path: /health
            port: 80
            scheme: HTTP
          initialDelaySeconds: 5
          periodSeconds: 15
          timeoutSeconds: 5
        readinessProbe:
          httpGet:
            path: /readiness
            port: 80
            scheme: HTTP
          initialDelaySeconds: 5
          periodSeconds: 15
          timeoutSeconds: 5
